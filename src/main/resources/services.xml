<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="discount.xml"/>
    <import resource="beans-maps.xml"/>

    <bean id="userService" class="epam.spring.map_services.UserServiceMap">
        <constructor-arg ref="users-map"/>
    </bean>

    <bean id="eventService" class="epam.spring.map_services.EventServiceMap">
        <constructor-arg ref="events-map"/>
        <property name="auditoriumService" ref="auditoriumService"/>
        <property name="assignedEvents" ref="assigned-event-map"/>
    </bean>

    <bean id="auditoriumService" class="epam.spring.map_services.AuditoriumServiceMap">
        <constructor-arg ref="auditoriums-map" />
    </bean>

    <bean id="bookingService" class="epam.spring.map_services.BookingServiceMap">
        <constructor-arg ref="discountService"/>
        <constructor-arg ref="tickets-map"/>
    </bean>

    <bean id="discountService" class="epam.spring.map_services.DiscountServiceMap">
        <constructor-arg ref="discounts-list" />
    </bean>
</beans>